extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 #{__('signup')}
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') #{__('Email')}
      .col-md-7
        input.form-control(type='email', name='email', id='email', autofocus, autocomplete='email', value=email, placeholder='', required)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') #{__('Name')}
      .col-md-7
        input.form-control(type='text', name='name', id='name', autofocus, autocomplete='name', value=name, placeholder=name_placeholder, required)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Gender')}
      .col-sm-6
        for gen in genders
          if gen == gender_selected
            .form-check.form-check-inline
              input(type='radio', class='form-check-input', name='gender', value=gen, data-toggle='radio', checked, required)
              label.form-check-label= gen 
          else 
            .form-check.form-check-inline
              input(type='radio', class='form-check-input', name='gender', value=gen, data-toggle='radio', required)
              label.form-check-label= gen

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Usertype')}
      .col-sm-6
        for utype in usertypes
          if utype == usertype_selected
            .form-check.form-check-inline
              input(type='radio', class='form-check-input', name='usertype', value=utype, data-toggle='radio', checked, required)
              label.form-check-label= utype
          else 
            .form-check.form-check-inline
              input(type='radio', class='form-check-input', name='usertype', value=utype, data-toggle='radio', required)
              label.form-check-label= utype
        //- .form-check.form-check-inline
        //-   input(type='radio', class='form-check-input', name='is_speaker', value=1, data-toggle='radio')
        //-   label.form-check-label #{__('Speaker')}
        //- .form-check.form-check-inline
        //-   input(type='radio', class='form-check-input', name='is_speaker', value=0, data-toggle='radio')
        //-   label.form-check-label #{__('Researcher')}

    - var prefectures = ['北海道', '青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県', '茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', '東京都', '神奈川県', '新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県', '鳥取県', '島根県', '岡山県', '広島県', '山口県', '徳島県', '香川県', '愛媛県', '高知県', '福岡県', '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県', '鹿児島県', '沖縄県']
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Birthplace')}
      .col-md-7
        select.form-control(name='birthplace', required)
          option(value='')= '選択してください'
          for birthplace in prefectures
            if birthplace == birthplace_selected
              option(value=birthplace, selected)= birthplace
            else 
              option(value=birthplace)= birthplace

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Residence')}
      .col-md-7
        select.form-control(name='residence', required)
          option(value='')= '選択してください'
          for residence in prefectures
            if residence == residence_selected
              option(value=residence, selected)= residence
            else 
              option(value=residence)= residence

    - var professions = ['公務員', '経営者・役員', '会社員', '自営業', '自由業', '専業主婦', 'パート・アルバイト', '学生', 'その他']
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Profession')}
      .col-md-7
        select.form-control(name='profession', required)
          option(value='')= '選択してください'
          for profession in professions
            if profession == profession_selected
              option(value=profession, selected)= profession
            else 
              option(value=profession)= profession

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Birthyear')}
      .col-md-7
        select.form-control(name='birthyear', required)
          option(value='')= '選択してください'
          for birthyear in birthyears
            if birthyear == birthyear_selected
              option(value=birthyear, selected)= birthyear
            else 
              option(value=birthyear)= birthyear

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right #{__('Proficiency in vocal')}
      .col-md-7
        select.form-control(name='proficiency', required)
          option(value='')= '選択してください'
          for proficiency_level in proficiency_levels
            if proficiency_level == proficiency_level_selected
              option(value=proficiency_level, selected)= proficiency_level
            else 
              option(value=proficiency_level)= proficiency_level

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') #{__('Password')}
      .col-md-7
        input.form-control(type='password', name='password', id='password', autocomplete='new-password', placeholder=password_placeholder, required)

    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') #{__('Confirm password')}
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', autocomplete='new-password', required)

    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-fw.fa-user-plus.fa-sm
        | #{__('Signup')}
